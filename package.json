{
  "name": "ghana-omc-erp",
  "version": "1.0.0",
  "description": "Ghana Oil Marketing Company SaaS ERP System",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean",
    "db:migrate": "npm run db:migrate --workspace=@omc-erp/database",
    "db:seed": "npm run db:seed --workspace=@omc-erp/database",
    "db:health": "ts-node scripts/check-database-health.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:db-only": "docker-compose up -d postgres timescaledb redis mongodb",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "pg": "^8.16.3",
    "redis": "^4.6.5",
    "ts-node": "^10.9.2"
  }
}
